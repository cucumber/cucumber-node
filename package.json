{
  "name": "@cucumber/node",
  "version": "0.4.0",
  "author": "David Goss (https://github.com/davidjgoss)",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./bootstrap": "./lib/bootstrap/index.js",
    "./reporters/*": "./lib/reporters/builtin/*.js",
    "./runner": "./lib/runner/index.js"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "coverage:check": "c8 --100 npm test",
    "coverage:report": "c8 --reporter html npm test",
    "docs": "typedoc",
    "exports:check": "api-extractor run --verbose",
    "exports:update": "api-extractor run --verbose --local",
    "fix": "eslint --max-warnings 0 src --fix && prettier --write src test",
    "lint": "eslint --max-warnings 0 src && prettier --check src test",
    "prepublishOnly": "npm run build",
    "test": "npm run test:unit && npm run test:integration && npm run test:cck",
    "test:cck": "tsc && mocha test/cck/*.spec.ts",
    "test:integration": "tsc && mocha test/integration/*.spec.ts",
    "test:unit": "mocha 'src/**/*.spec.ts'"
  },
  "dependencies": {
    "@cucumber/ci-environment": "11.0.0",
    "@cucumber/core": "0.5.1",
    "@cucumber/cucumber-expressions": "18.0.1",
    "@cucumber/gherkin": "36.0.0",
    "@cucumber/html-formatter": "22.0.0",
    "@cucumber/junit-xml-formatter": "0.9.0",
    "@cucumber/messages": "30.1.0",
    "@cucumber/query": "^14.0.0",
    "@cucumber/tag-expressions": "8.0.0",
    "globby": "^15.0.0",
    "stack-utils": "2.0.6",
    "type-fest": "^5.0.0"
  },
  "devDependencies": {
    "@cucumber/compatibility-kit": "^22.0.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@microsoft/api-extractor": "7.53.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@types/stack-utils": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "c8": "^10.1.3",
    "chai": "^6.0.0",
    "chai-exclude": "^3.0.0",
    "eslint": "9.38.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "^16.0.0",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.0",
    "typescript": "^5.7.3"
  }
}
